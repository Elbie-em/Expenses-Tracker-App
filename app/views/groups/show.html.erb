<div class="d-flex flex-row justify-content-between p-3">
  <%= link_to '<i class="fas fa-bars fa-2x text-white"></i>'.html_safe, home_main_path %>
  <h2 class="text-white text-center">Groups</h2>
  <%= link_to '<i class="fas fa-sign-out-alt fa-2x text-white"></i>'.html_safe, destroy_user_session_path, method: :delete %>
</div>
<div class="d-flex flex-row justify-content-between p-3">
  <%= link_to '<i class="fas fa-arrow-left fa-2x text-white"></i>'.html_safe, groups_path %>
  <span class="text-white push-b"><%= @group.name %> Group Transactions</span>
  <span class="text-muted push-b">Archives</span>
</div>

<div class="g-bg">
  <div class="p-3">
  <%= link_to 'Edit Group', edit_group_path(@group),class:"btn btn-info form-control mb-3" %>
  </div>
  <div class="total-div border-bottom border-muted bg-light">
    <span class="p-3 float-left text-muted">Total</span><span class="p-3 float-right font-weight-bold">€ <%= @total%></span>
  </div>
  <div class="p-3">
    <% @group_expenses.each do |expense| %>
      <a href= "#" class="bg-light media border border-muted pd-g mb-3">
        <img src="<%=expense.group.icon%>" class="thumb-size mr-3" alt="icon">
        <div class="media-body">
          <div class="float-left">
          <h6 class="text-muted"><%= expense.name %></h6>
          <p class="text-muted l-h">Creator:<%= expense.user.name %></p>
          <span class="text-muted l-h"><%= expense.created_at.strftime("%d-%b-%Y") %></span>
          </div>
          <div class="float-right">
            <span class="p-3 font-weight-bold expense-a text-dark">€ <%=expense.amount%></span>
          </div>
        </div>
      </a>
    <% end %>
  </div>
