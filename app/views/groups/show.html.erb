<h1 class="text-white text-center"><%= @group.name %> Group Transactions</h1>

<div class="g-bg p-3">
<%= link_to 'Edit Group', edit_group_path(@group),class:"btn btn-info form-control mb-3" %>

<div>
  <div class="total-div border-bottom border-muted bg-light">
    <span class="p-3 float-left">Total</span><span class="p-3 float-right font-weight-bold">€ <%= @total%></span>
  </div>
  <div class="g-bg p-3">
    <% @group_expenses.each do |expense| %>
      <a href= "#" class="bg-light media border border-muted pd-g mb-3">
        <img src="<%=expense.group.icon%>" class="thumb-size mr-3" alt="icon">
        <div class="media-body">
          <div class="float-left">
          <h5 class="mt-3 text-muted"><%= expense.name %></h5>
          <p class="text-muted">Creator: <%= expense.user.email %></p>
          <p class="text-muted"><%= expense.created_at.strftime("%d-%b-%Y") %></p>
          </div>
          <div class="float-right">
            <span class="p-3 font-weight-bold expense-a text-dark">€ <%=expense.amount%></span>
          </div>
        </div>
      </a>
    <% end %>
<p class="text-center">
  <%= link_to 'Back', groups_path %>
</p>
</div>
