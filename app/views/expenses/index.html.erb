<h1 class="text-white text-center">My Expenses</h1>

<div class="g-bg">
  <div class="total-div border-bottom border-muted bg-light">
    <span class="p-3 float-left">Total</span><span class="p-3 float-right font-weight-bold">$ 10</span>
  </div>
  <div class="p-3">
    <% @expenses.each do |expense| %>
      <a href= "expenses/<%=expense.id%>" class="bg-light media border border-muted pd-g">
        <img src="<%=expense.group.icon%>" class="thumb-size mr-3" alt="icon">
        <div class="media-body">
          <div class="float-left">
          <h5 class="mt-3 text-muted"><%= expense.name %></h5>
          <p class="text-muted">Group name:<%= expense.group.name %></p>
          <p class="text-muted"><%= expense.created_at.strftime("%d-%b-%Y") %></p>
          </div>
          <div class="float-right">
            <span class="p-3 font-weight-bold expense-a text-dark">â‚¬ <%=expense.amount%></span>
          </div>
        </div>
        <%= link_to 'Show', expense %>
        <%= link_to 'Edit', edit_expense_path(expense) %>
        <%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' } %>
      </a>
    <% end %>
  </div>
<div>
<div class="create-button-area text-center">
  <%= button_to 'Create New', new_expense_path,method: :get,class:"create-button border border-white text-white" %>
</div>
